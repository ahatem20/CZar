def readPassId():
    passId = input(
        'Enter your password ID [example: facebook account]: '
    )
    return passId


def readUserName(passId):
    usrName = input(
        'Enter your {}\'s User Name: '.format(
            str(passId)
        )
    )
    return usrName


def readPassword(passId):
    password = input(
        'Enter your {}\'sPassword: '.format(
            str(passId)
        )
    )
    return password
